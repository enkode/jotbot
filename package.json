{
  "name": "temp_scaffold",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron:dev": "concurrently -k \"cross-env BROWSER=none npm run dev\" \"wait-on http://localhost:5173 && cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electron .\"",
    "electron:build": "npm run build && electron-builder"
  },
  "dependencies": {
    "@tiptap/extension-code-block-lowlight": "^3.19.0",
    "@tiptap/extension-image": "^3.19.0",
    "@tiptap/react": "^3.19.0",
    "@tiptap/starter-kit": "^3.19.0",
    "lowlight": "^3.3.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "description": "A terminal-themed sticky note application.",
  "author": "Troy",
  "build": {
    "appId": "com.jotbot.app",
    "productName": "jot.bot",
    "win": {
      "target": "msi",
      "icon": "public/tray.png"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "public/**/*",
      "!**/.agent/**/*",
      "!**/.gemini/**/*",
      "!**/brain/**/*",
      "!**/knowledge/**/*",
      "!GEMINI.md"
    ],
    "directories": {
      "output": "release"
    }
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^40.4.1",
    "electron-builder": "^26.7.0",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "vite": "^7.3.1",
    "wait-on": "^9.0.4"
  }
}